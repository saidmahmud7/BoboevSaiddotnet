@page "/register"
@model RegisterModel
@{
    ViewData["Title"] = "User";
}
<h2 class="text-center mt-4">Регистрация</h2>

<div class="container mt-5">
    <form method="post" class="shadow p-4 rounded" style="max-width: 400px; margin: auto; background-color: #f9f9f9;">
        <div class="mb-3">
            <label class="form-label">Имя пользователя:</label>
            <input type="text" name="userName" class="form-control" placeholder="Введите имя пользователя" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Пароль:</label>
            <input type="password" name="password" class="form-control" placeholder="Введите пароль" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Подтвердите пароль:</label>
            <input type="password" name="confirmPassword" class="form-control" placeholder="Повторите пароль" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Зарегистрироваться</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <p class="text-center mt-3 text-danger">@Model.Message</p>
    }
</div>

