@model Domain.Post

<div class="container mt-4">
    <h2 class="text-center mb-4">Подробности поста</h2>

    <div>
        <h3>@Model.Title</h3>
        <p><strong>Категория:</strong> @Model.Category.Name</p>
        <p><strong>Содержание:</strong></p>
        <p>@Model.Content</p>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактировать</a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Вы уверены?')">Удалить</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>
</div>
