@model Domain.Post

<div class="container mt-4">
    <h2 class="text-center mb-4">Редактировать пост</h2>

    <form asp-action="Edit" method="post">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Заголовок</label>
            <input asp-for="Title" class="form-control" placeholder="Введите заголовок" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label">Содержание</label>
            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Введите содержание"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Категория</label>
            <select asp-for="CategoryId" class="form-control">
                <option value="">Выберите категорию</option>
                @if (ViewData["Categories"] != null)
                {
                    var categories = ViewData["Categories"] as List<Domain.Category>;
                    foreach (var category in categories)
                    {
                        <option value="@category.Id" selected="@((category.Id == Model.CategoryId) ? "selected" : "")">@category.Name</option>

                    }
                }
                else
                {
                    <option value="">Категории не найдены</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Обновить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>
