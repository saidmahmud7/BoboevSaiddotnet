@model List<Domain.Category>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Список категорий</h2>
        <a asp-action="Create" class="btn btn-success btn-lg">Добавить категорию</a>
    </div>

    <div class="card shadow-lg rounded">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Название</th>
                    <th scope="col">Описание</th>
                    <th scope="col" class="text-center">Действия</th>
                </tr>
                </thead>
                <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">Нет доступных категорий.</td>
                    </tr>
                }
                else
                {
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td class="text-center"><strong>@category.Id</strong></td>
                            <td>@category.Name</td>
                            <td>@category.Description</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-info btn-sm text-white">
                                        <i class="bi bi-eye"></i> Детали
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Изменить
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Вы уверены?')">
                                            <i class="bi bi-trash"></i> Удалить
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
