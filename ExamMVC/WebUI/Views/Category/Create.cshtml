@model Domain.Category

<div class="container mt-4">
    <h2 class="text-center mb-4">Создать категорию</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Название категории</label>
            <input asp-for="Name" class="form-control" placeholder="Введите название категории" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Описание</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Введите описание категории"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Создать</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>
