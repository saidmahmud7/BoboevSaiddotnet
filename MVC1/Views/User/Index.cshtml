@model List<MVC1.Models.UserModel>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Список пользователей</h2>
        <a href="/User/Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Добавить пользователя
        </a>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th class="text-center">ID</th>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Email</th>
                    <th class="text-center">Возраст</th>
                    <th class="text-center">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="text-center fw-bold">@user.Id</td>
                        <td>@user.FisrtName</td>
                        <td>@user.LatName</td>
                        <td>@user.Email</td>
                        <td class="text-center">@user.Age</td>
                        <td class="text-center">
                            <a href="/User/Details/@user.Id" class="btn btn-outline-info btn-sm me-1">
                                <i class="bi bi-eye"></i> Подробнее
                            </a>
                            <a href="/User/Update/@user.Id" class="btn btn-outline-warning btn-sm me-1">
                                <i class="bi bi-pencil"></i> Редактировать
                            </a>
                            <form action="/User/Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Удалить
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            <i class="bi bi-exclamation-triangle"></i> Нет пользователей!
        </div>
    }
</div>
