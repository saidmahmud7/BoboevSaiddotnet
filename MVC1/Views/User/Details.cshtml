@model MVC1.Models.UserModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4 text-center">Детали пользователя</h2>
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h5 class="card-title text-primary mb-3">
                        <i class="bi bi-person-circle me-2"></i>@Model.FisrtName @Model.LatName
                    </h5>
                    <p class="card-text mb-2">
                        <strong>Email:</strong> <span class="text-muted">@Model.Email</span>
                    </p>
                    <p class="card-text">
                        <strong>Возраст:</strong> <span class="text-muted">@Model.Age</span>
                    </p>
                </div>
            </div>
            <div class="text-center mt-4">
                <a href="/User/Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left me-2"></i>Назад
                </a>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
